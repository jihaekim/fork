<!DOCTYPE html>
<html>
  <head>
    <title>ForkTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag   "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css" %>
    <%= stylesheet_link_tag    'application'%>
